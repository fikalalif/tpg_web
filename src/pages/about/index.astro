<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>About Us - Tempat Peraduan Group</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap');
        
        * {
            font-family: 'Inter', sans-serif;
        }
        
        body {
            background: linear-gradient(135deg, #000000 0%, #1a1a1a 50%, #000000 100%);
            min-height: 100vh;
        }
        
        .fade-in-up {
            animation: fadeInUp 1s ease-out forwards;
            opacity: 0;
            transform: translateY(30px);
        }
        
        @keyframes fadeInUp {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        .slide-in-left {
            animation: slideInLeft 0.8s ease-out forwards;
            opacity: 0;
            transform: translateX(-50px);
        }
        
        @keyframes slideInLeft {
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }
        
        .slide-in-right {
            animation: slideInRight 0.8s ease-out forwards;
            opacity: 0;
            transform: translateX(50px);
        }
        
        @keyframes slideInRight {
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }
        
        .scale-in {
            animation: scaleIn 0.6s ease-out forwards;
            opacity: 0;
            transform: scale(0.8);
        }
        
        @keyframes scaleIn {
            to {
                opacity: 1;
                transform: scale(1);
            }
        }
        
        .gradient-text {
            background: linear-gradient(135deg, #ffffff 0%, #cccccc 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }
        
        .glow-effect {
            box-shadow: 0 0 30px rgba(255,255,255,0.1);
        }
        
        .card-effect {
            background: linear-gradient(135deg, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0.05) 100%);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255,255,255,0.1);
            border-radius: 20px;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }
        
        .card-effect:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 40px rgba(0,0,0,0.3);
            border-color: rgba(255,255,255,0.2);
        }
        
        .business-link {
            position: relative;
            display: inline-block;
            transition: all 0.3s ease;
            padding: 2px 0;
        }
        
        .business-link::before {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 0;
            height: 2px;
            background: linear-gradient(90deg, #3b82f6, #60a5fa);
            transition: width 0.3s ease;
        }
        
        .business-link:hover::before {
            width: 100%;
        }
        
        .business-link:hover {
            color: #60a5fa;
            transform: translateY(-2px);
        }
        
        .floating {
            animation: floating 6s ease-in-out infinite;
        }
        
        @keyframes floating {
            0%, 100% { transform: translateY(0px); }
            50% { transform: translateY(-10px); }
        }
        
        .pulse-glow {
            animation: pulseGlow 3s ease-in-out infinite;
        }
        
        @keyframes pulseGlow {
            0%, 100% { box-shadow: 0 0 20px rgba(255,255,255,0.1); }
            50% { box-shadow: 0 0 40px rgba(255,255,255,0.2); }
        }
        
        .section-divider {
            height: 1px;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
            margin: 3rem 0;
        }
        
        .quote-style {
            position: relative;
            font-style: italic;
            font-size: 1.5rem;
            font-weight: 600;
            text-align: center;
            padding: 2rem;
            background: linear-gradient(135deg, rgba(59, 130, 246, 0.1), rgba(147, 51, 234, 0.1));
            border-radius: 20px;
            border: 1px solid rgba(255,255,255,0.1);
            margin: 3rem 0;
        }
        
        .quote-style::before,
        .quote-style::after {
            content: '"';
            font-size: 4rem;
            color: rgba(255,255,255,0.3);
            position: absolute;
            font-family: serif;
        }
        
        .quote-style::before {
            top: -10px;
            left: 20px;
        }
        
        .quote-style::after {
            bottom: -40px;
            right: 20px;
        }
        
        .social-link {
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }
        
        .social-link::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.1), transparent);
            transition: left 0.5s ease;
        }
        
        .social-link:hover::before {
            left: 100%;
        }
        
        .social-link:hover {
            color: #60a5fa;
            transform: translateY(-2px);
        }
        
        .loading-bar {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 3px;
            background: linear-gradient(90deg, #3b82f6, #60a5fa);
            transform: translateX(-100%);
            animation: loadingBar 2s ease-out forwards;
            z-index: 9999;
        }
        
        @keyframes loadingBar {
            to {
                transform: translateX(0);
            }
        }
        
        .section-reveal {
            opacity: 0;
            transform: translateY(50px);
            transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
        }
        
        .section-reveal.revealed {
            opacity: 1;
            transform: translateY(0);
        }
        
        /* Background particles */
        .particles {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: -1;
        }
        
        .particle {
            position: absolute;
            width: 2px;
            height: 2px;
            background: rgba(255,255,255,0.3);
            border-radius: 50%;
            animation: particleFloat 8s linear infinite;
        }
        
        @keyframes particleFloat {
            0% {
                transform: translateY(100vh) rotate(0deg);
                opacity: 0;
            }
            10% {
                opacity: 1;
            }
            90% {
                opacity: 1;
            }
            100% {
                transform: translateY(-100px) rotate(360deg);
                opacity: 0;
            }
        }
        
        /* Responsive improvements */
        @media (max-width: 768px) {
            .quote-style {
                font-size: 1.25rem;
                padding: 1.5rem;
            }
            
            .quote-style::before,
            .quote-style::after {
                font-size: 3rem;
            }
        }
    </style>
</head>
<body class="bg-black text-white overflow-x-hidden">
    <div class="loading-bar"></div>
    
    <!-- Background Particles -->
    <div class="particles">
        <div class="particle" style="left: 10%; animation-delay: 0s;"></div>
        <div class="particle" style="left: 20%; animation-delay: 1s;"></div>
        <div class="particle" style="left: 30%; animation-delay: 2s;"></div>
        <div class="particle" style="left: 40%; animation-delay: 3s;"></div>
        <div class="particle" style="left: 50%; animation-delay: 4s;"></div>
        <div class="particle" style="left: 60%; animation-delay: 5s;"></div>
        <div class="particle" style="left: 70%; animation-delay: 6s;"></div>
        <div class="particle" style="left: 80%; animation-delay: 7s;"></div>
        <div class="particle" style="left: 90%; animation-delay: 8s;"></div>
    </div>

    <section class="bg-transparent text-white px-6 py-16 lg:py-24">
        <div class="max-w-6xl mx-auto space-y-16">
            <!-- Header Section -->
            <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-6 fade-in-up">
                <a href="/" class="group">
                    <img 
                        src="tpg_logo.png" 
                        alt="Logo" 
                        class="h-12 lg:h-16 transition-all duration-300 group-hover:scale-110 glow-effect floating" 
                    />
                </a>
                <div class="text-right">
                    <p class="text-xs lg:text-sm tracking-widest text-gray-400 font-medium">
                        PT TEMPAT PERADUAN Group
                    </p>
                    <div class="w-full h-px bg-gradient-to-r from-transparent to-white/30 mt-2"></div>
                </div>
            </div>

            <!-- About Us Section -->
            <div class="section-reveal card-effect p-8 lg:p-12">
                <h2 class="text-4xl lg:text-5xl font-bold mb-8 gradient-text slide-in-left">
                    About Us
                </h2>
                <p class="text-base lg:text-lg leading-relaxed text-gray-300 max-w-4xl slide-in-right" style="animation-delay: 0.2s;">
                    PT Tempat Peraduan Group merupakan perusahaan yang bergerak di bidang Food and Beverage. 
                    Perusahaan kami mengelola dan memiliki <span class="text-white font-semibold">21 lini bisnis kuliner</span> 
                    dari Kedai Makanan, Coffee Shop, Penyelenggara Jasa Boga (Katering), Roast Beans Manufacture, 
                    Agency Creative, hingga Coffee Shop and Eatery Consultant.
                </p>
            </div>

            <!-- Quote Section -->
            <div class="quote-style scale-in gradient-text" style="animation-delay: 0.4s;">
                BERGERAK ATAU TERGANTIKAN
            </div>

            <!-- Vision & Mission Grid -->
            <div class="grid md:grid-cols-2 gap-8 lg:gap-12">
                <!-- Vision -->
                <div class="section-reveal card-effect p-8 lg:p-10">
                    <h2 class="text-3xl lg:text-4xl font-bold mb-6 gradient-text">
                        Visi
                    </h2>
                    <p class="text-base lg:text-lg leading-relaxed text-gray-300">
                        Menjadi Perusahaan Food and Beverage yang menguasai sektor 
                        <span class="text-white font-semibold">hulu hingga hilir</span>, 
                        dan membawa perubahan baik bagi peradaban, serta mampu bersaing di 
                        <span class="text-white font-semibold">pasar global</span>
                    </p>
                </div>

                <!-- Mission -->
                <div class="section-reveal card-effect p-8 lg:p-10" style="animation-delay: 0.2s;">
                    <h2 class="text-3xl lg:text-4xl font-bold mb-6 gradient-text">
                        Misi
                    </h2>
                    <p class="text-base lg:text-lg leading-relaxed text-gray-300">
                        Menjadi Perusahaan yang kompeten untuk mengelola berbagai macam lini bisnis 
                        di sektor Food and Beverage. Memiliki sumber daya manusia 
                        <span class="text-white font-semibold">generalis & spesialis</span> 
                        yang berkualitas unggul
                    </p>
                </div>
            </div>

            <div class="section-divider"></div>

            <!-- Business Lines Section -->
            <div class="section-reveal card-effect p-8 lg:p-12">
                <div class="flex items-center gap-6 mb-8">
                    <img 
                        src="tpg-divbot.png" 
                        alt="TPG Logo" 
                        class="h-12 lg:h-16 pulse-glow" 
                    />
                    <div class="flex-1 h-px bg-gradient-to-r from-white/30 to-transparent"></div>
                </div>
                
                <div class="text-xl lg:text-2xl xl:text-3xl font-bold leading-relaxed tracking-wide space-y-4">
                    <div class="slide-in-left">
                        <a href="https://www.instagram.com/tempatperaduan/" class="business-link">COFFEE SHOP</a>
                        <span class="text-gray-500 mx-3">/</span>
                        <a href="https://www.instagram.com/11throastery/" class="business-link">ROASTERY</a>
                        <span class="text-gray-500 mx-3">/</span>
                        <a href="https://www.instagram.com/l2katering/" class="business-link">F&B</a>
                        <span class="text-gray-500 mx-3">/</span>
                        <a href="https://www.instagram.com/scldilemma/" class="business-link">FASHION</a>
                    </div>
                    
                    <div class="slide-in-right" style="animation-delay: 0.2s;">
                        <a href="https://www.instagram.com/belumtidurcreative/" class="business-link">CREATIVE</a>
                        <span class="text-gray-500 mx-3">/</span>
                        <a href="/#client" class="business-link">CLIENT</a>
                        <span class="text-gray-500 mx-3">/</span>
                        <a href="" class="business-link">PARTNERSHIP</a>
                        <span class="text-gray-500 mx-3">/</span>
                        <a href="/#brands" class="business-link">FAMILY</a>
                    </div>
                    
                    <div class="slide-in-left" style="animation-delay: 0.4s;">
                        <a href="https://maps.app.goo.gl/QxTuL5WzA5mRw1939" class="business-link">OFFICE</a>
                        <span class="text-gray-500 mx-3">/</span>
                        <span class="text-gray-400 italic">NO ART TODAY</span>
                    </div>
                </div>
            </div>

            <div class="section-divider"></div>

            <!-- Footer Section -->
            <div class="flex flex-col lg:flex-row justify-between items-start lg:items-end gap-8 fade-in-up">
                <!-- Company Name -->
                <div class="scale-in">
                    <h3 class="text-2xl lg:text-3xl font-bold gradient-text leading-tight">
                        TEMPAT<br />
                        <span class="font-semibold text-gray-300">PERADUAN</span><br />
                        <span class="text-lg lg:text-xl">Group</span>
                    </h3>
                </div>

                <!-- Social Media Links -->
                <div class="flex flex-wrap gap-6 lg:gap-8 text-sm lg:text-base tracking-widest uppercase font-medium">
                    <a href="https://www.instagram.com/peraduangroup/" class="social-link">Instagram</a>
                    <a href="https://www.youtube.com/@tempatperaduan7822" class="social-link">YouTube</a>
                    <a href="https://x.com/tempatperaduan" class="social-link">X</a>
                    <a href="https://api.whatsapp.com/send/?phone=%2B6281393731823&text&type=phone_number&app_absent=0" class="social-link">Contact</a>
                </div>
            </div>

            <!-- Copyright -->
            <div class="text-center text-gray-500 text-sm lg:text-base border-t border-gray-800 pt-8 fade-in-up">
                <p>© <span id="current-year"></span> PT Tempat Peraduan Group. All rights reserved.</p>
            </div>
        </div>
    </section>

    <script>
        // Set current year
        document.getElementById('current-year').textContent = new Date().getFullYear();

        // Intersection Observer for section reveals
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('revealed');
                }
            });
        }, observerOptions);

        // Observe all sections with reveal animation
        document.querySelectorAll('.section-reveal').forEach(section => {
            observer.observe(section);
        });

        // Add loading animation completion
        window.addEventListener('load', () => {
            setTimeout(() => {
                const loadingBar = document.querySelector('.loading-bar');
                if (loadingBar) {
                    loadingBar.style.opacity = '0';
                    setTimeout(() => {
                        loadingBar.remove();
                    }, 500);
                }
            }, 2000);
        });

        // Add smooth scroll behavior
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Add particle animation randomization
        document.querySelectorAll('.particle').forEach((particle, index) => {
            particle.style.animationDelay = `${Math.random() * 8}s`;
            particle.style.left = `${Math.random() * 100}%`;
        });
    </script>
</body>
</html>

