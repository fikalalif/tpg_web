---
import "../styles/global.css";
import SwiperCarousel from "../components/SwiperCarousel.jsx";
import SwiperCarouselClient from "../components/SwiperCarouselClient.jsx";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tempat Peraduan Group</title>
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap");

      * {
        font-family: "Inter", sans-serif;
      }

      .hero-gradient {
        background: linear-gradient(
          135deg,
          rgba(0, 0, 0, 0.8) 0%,
          rgba(30, 30, 30, 0.6) 50%,
          rgba(0, 0, 0, 0.9) 100%
        );
      }

      .nav-blur {
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
      }

      .glow-effect {
        box-shadow: 0 0 30px rgba(255, 255, 255, 0.1);
      }

      .text-glow {
        text-shadow: 0 0 20px rgba(255, 255, 255, 0.3);
      }

      .floating {
        animation: floating 6s ease-in-out infinite;
      }

      @keyframes floating {
        0%,
        100% {
          transform: translateY(0px);
        }
        50% {
          transform: translateY(-20px);
        }
      }

      .fade-in-up {
        animation: fadeInUp 1s ease-out forwards;
        opacity: 0;
        transform: translateY(30px);
      }

      @keyframes fadeInUp {
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .slide-in-left {
        animation: slideInLeft 0.8s ease-out forwards;
        opacity: 0;
        transform: translateX(-50px);
      }

      @keyframes slideInLeft {
        to {
          opacity: 1;
          transform: translateX(0);
        }
      }

      .slide-in-right {
        animation: slideInRight 0.8s ease-out forwards;
        opacity: 0;
        transform: translateX(50px);
      }

      @keyframes slideInRight {
        to {
          opacity: 1;
          transform: translateX(0);
        }
      }

      .scale-in {
        animation: scaleIn 0.6s ease-out forwards;
        opacity: 0;
        transform: scale(0.8);
      }

      @keyframes scaleIn {
        to {
          opacity: 1;
          transform: scale(1);
        }
      }

      .pulse-glow {
        animation: pulseGlow 2s ease-in-out infinite;
      }

      @keyframes pulseGlow {
        0%,
        100% {
          box-shadow: 0 0 20px rgba(255, 255, 255, 0.1);
        }
        50% {
          box-shadow: 0 0 40px rgba(255, 255, 255, 0.2);
        }
      }

      .gradient-text {
        background: linear-gradient(135deg, #ffffff 0%, #cccccc 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }

      .card-hover {
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      }

      .card-hover:hover {
        transform: translateY(-10px) scale(1.02);
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.5);
      }

      .nav-item {
        position: relative;
        overflow: hidden;
      }

      .nav-item::before {
        content: "";
        position: absolute;
        bottom: 0;
        left: 0;
        width: 0;
        height: 2px;
        background: linear-gradient(90deg, #ffffff, #cccccc);
        transition: width 0.3s ease;
      }

      .nav-item:hover::before {
        width: 100%;
      }

      .social-icon {
        transition: all 0.3s ease;
        filter: grayscale(100%);
      }

      .social-icon:hover {
        filter: grayscale(0%);
        transform: translateY(-3px) scale(1.1);
      }

      .loading-bar {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 3px;
        background: linear-gradient(90deg, #ffffff, #cccccc);
        transform: translateX(-100%);
        animation: loadingBar 2s ease-out forwards;
        z-index: 9999;
      }

      @keyframes loadingBar {
        to {
          transform: translateX(0);
        }
      }

      .parallax {
        transform: translateZ(0);
        will-change: transform;
      }

      .section-reveal {
        opacity: 0;
        transform: translateY(50px);
        transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
      }

      .section-reveal.revealed {
        opacity: 1;
        transform: translateY(0);
      }
    </style>
  </head>
  <body class="bg-black text-white w-full max-w-full overflow-x-hidden">
    <div class="loading-bar"></div>

    <!-- Navigation -->
    <nav
      class="z-[999] border-2 border-white/20 bg-gradient-to-r from-zinc-600 via-black to-zinc-600 opacity-85 nav-blur rounded-b-3xl fixed w-full top-0 left-0 text-lg transition-all duration-300 hover:bg-black/90"
    >
      <div
        class="container mx-auto flex justify-between items-center p-4 lg:px-8"
      >
        <!-- Logo -->
        <a href="/" class="scale-in" style="animation-delay: 0.2s;">
          <img
            src="tpg_logo.png"
            class="h-10 w-auto sm:h-12 lg:h-14 transition-all duration-300 hover:scale-110"
            alt="TPG Logo"
          />
        </a>

        <!-- Desktop Menu Links -->
        <div class="hidden md:flex space-x-6 lg:space-x-8 items-center">
          <a
            href="/about"
            class="nav-item text-white hover:text-gray-300 transition-all duration-300 font-medium slide-in-right"
            style="animation-delay: 0.3s;">ABOUT</a
          >
          <a
            href="#brands"
            class="nav-item text-white hover:text-gray-300 transition-all duration-300 font-medium slide-in-right"
            style="animation-delay: 0.4s;">BRANDS</a
          >
          <a
            href="#client"
            class="nav-item text-white hover:text-gray-300 transition-all duration-300 font-medium slide-in-right"
            style="animation-delay: 0.5s;">CLIENT</a
          >
          <a
            href="#partnership"
            class="nav-item text-white hover:text-gray-300 transition-all duration-300 font-medium slide-in-right"
            style="animation-delay: 0.6s;">PARTNERSHIP</a
          >
          <a
            href="#career"
            class="nav-item text-white hover:text-gray-300 transition-all duration-300 font-medium slide-in-right"
            style="animation-delay: 0.7s;">CAREER</a
          >
          <a
            href="#contact"
            class="nav-item text-white hover:text-gray-300 transition-all duration-300 font-medium slide-in-right"
            style="animation-delay: 0.8s;">CONTACT US</a
          >
        </div>

        <!-- Mobile Menu Button -->
        <div class="md:hidden scale-in" style="animation-delay: 0.3s;">
          <button
            id="hamburger-btn"
            class="text-white focus:outline-none p-2 rounded-lg hover:bg-white/10 transition-all duration-300"
          >
            <svg
              class="w-6 h-6 transition-transform duration-300"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 6h16M4 12h16m-7 6h7"></path>
            </svg>
          </button>
        </div>
      </div>

      <!-- Mobile Menu -->
      <div
        id="mobile-menu"
        class="hidden md:hidden bg-black/95 nav-blur rounded-b-2xl border-t border-white/10 transform transition-all duration-300"
      >
        <div class="py-4 space-y-2">
          <a
            href="/about"
            class="block text-white hover:text-gray-300 hover:bg-white/5 px-6 py-3 transition-all duration-300 font-medium"
            >ABOUT</a
          >
          <a
            href="#brands"
            class="block text-white hover:text-gray-300 hover:bg-white/5 px-6 py-3 transition-all duration-300 font-medium"
            >BRANDS</a
          >
          <a
            href="#client"
            class="block text-white hover:text-gray-300 hover:bg-white/5 px-6 py-3 transition-all duration-300 font-medium"
            >CLIENT</a
          >
          <a
            href="#partnership"
            class="block text-white hover:text-gray-300 hover:bg-white/5 px-6 py-3 transition-all duration-300 font-medium"
            >PARTNERSHIP</a
          >
          <a
            href="#career"
            class="block text-white hover:text-gray-300 hover:bg-white/5 px-6 py-3 transition-all duration-300 font-medium"
            >CAREER</a
          >
          <a
            href="#contact"
            class="block text-white hover:text-gray-300 hover:bg-white/5 px-6 py-3 pb-6 transition-all duration-300 font-medium"
            >CONTACT US</a
          >
        </div>
      </div>
    </nav>

    <main class="pt-0">
      <!-- Hero Section -->
      <div class="relative w-full h-screen overflow-hidden">
        <img
          src="bg_top.jpg"
          alt="Background"
          class="absolute inset-0 w-full h-full object-cover z-0 parallax scale-105"
        />
        <div class="absolute inset-0 hero-gradient z-5"></div>
        <div class="absolute inset-0 flex justify-center items-center z-10 p-4">
          <div class="text-center space-y-8">
            <img
              src="tpg_center.png"
              alt="Center Image"
              class="w-2/4 sm:w-2/4 md:w-2/4 lg:w-2/4 xl:w-4/4 max-w-xs sm:max-w-sm md:max-w-md mx-auto fade-in-up"
              style="animation-delay: 1s;"
            />
            <div class="fade-in-up" style="animation-delay: 1.5s;">
              <h1
                class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold gradient-text text-glow mb-4"
              >
                Tempat Peraduan Group
              </h1>
            </div>
          </div>
        </div>

        <!-- Scroll Indicator -->
        <div
          class="absolute bottom-8 left-1/2 transform -translate-x-1/2 z-10 fade-in-up"
          style="animation-delay: 2s;"
        >
          <div
            class="w-6 h-10 border-2 border-white/50 rounded-full flex justify-center"
          >
            <div class="w-1 h-3 bg-white rounded-full mt-2 animate-bounce">
            </div>
          </div>
        </div>
      </div>

      <!-- Carousel Sections -->
      <div class="section-reveal py-16 lg:py-24">
        <div class="container mx-auto px-4">
          <div class="card-hover">
            <SwiperCarousel client:only="react" />
          </div>
        </div>
      </div>

      <div
        class="section-reveal py-16 lg:py-24 bg-gradient-to-b from-black via-gray-900 to-black"
      >
        <div class="container mx-auto px-4">
          <div class="card-hover">
            <SwiperCarouselClient client:only="react" />
          </div>
        </div>
      </div>
    </main>

    <!-- Footer -->
    <footer
      class="bg-gradient-to-t from-black via-zinc-900 to-black text-white px-6 py-16 lg:py-20 section-reveal"
      id="contact"
    >
      <div class="max-w-6xl mx-auto">
        <!-- Main Footer Content -->
        <div
          class="grid grid-cols-1 md:grid-cols-3 gap-12 lg:gap-16 text-center md:text-left mb-16"
        >
          <!-- Left: Logo & Address -->
          <div class="flex flex-col items-center md:items-start space-y-6">
            <div
              class="flex flex-col md:flex-row items-center md:items-start space-y-4 md:space-y-0 md:space-x-6"
            >
              <img src="tpg-divbot2.png" alt="Logo" class="h-16 lg:h-20" />
              <div class="text-center md:text-left">
                <h3 class="font-bold text-xl lg:text-2xl mb-3 gradient-text">
                  Tempat Peraduan
                </h3>
                <p class="text-gray-300 leading-relaxed text-sm lg:text-base">
                  Jl. Tentara Pelajar No.15, Slerok,<br />
                  Kec. Tegal Tim., Kota Tegal,<br />
                  Jawa Tengah 52122
                </p>
              </div>
            </div>
          </div>

          <!-- Center: Navigation Links -->
          <div id="career" class="space-y-6">
            <h3 class="font-bold text-xl lg:text-2xl gradient-text">
              Quick Links
            </h3>
            <div class="grid grid-cols-2 gap-4 text-xl lg:text-base">
              <a
                href="/about"
                class="nav-item text-gray-300 hover:text-white transition-all duration-300 py-2"
                >About Us</a
              >
              <a
                href="#career"
                class="nav-item text-gray-300 hover:text-white transition-all duration-300 py-2"
                >Career</a
              >
              <a
                href="#brands"
                class="nav-item text-gray-300 hover:text-white transition-all duration-300 py-2"
                >Brands</a
              >
              <a
                href="#contact"
                class="nav-item text-gray-300 hover:text-white transition-all duration-300 py-2"
                >Contact Us</a
              >
              <a
                href="#partnership"
                class="nav-item text-gray-300 hover:text-white transition-all duration-300 py-2 col-span-2"
                >Partnership</a
              >
            </div>
          </div>

          <!-- Right: Contact & Social -->
          <div class="space-y-8">
            <div
              class="card-hover bg-gradient-to-r from-gray-800 to-gray-700 text-white rounded-2xl p-6 max-w-xs mx-auto md:mx-0 text-center glow-effect"
            >
              <div class="space-y-3 mb-4 flex-col">
                <a
                  href="https://api.whatsapp.com/send/?phone=%2B6281234537764&text&type=phone_number&app_absent=0"
                  class="nav-item text-gray-300 hover:text-white transition-all duration-300 py-2 col-span-2">0812-3453-7764</a
                >
                <!-- <a href="https://api.whatsapp.com/send/?phone=%2B6281393731823&text&type=phone_number&app_absent=0" class="font-semibold text-lg">0813-9373-1823</a> -->
              </div>
              <div
                class="bg-black text-white rounded-xl py-3 px-4 font-bold text-sm tracking-wider"
              >
                INFO KEMITRAAN
              </div>
            </div>

            <div class="space-y-4">
              <h4 class="font-bold text-lg gradient-text">Follow Us</h4>
              <div class="flex justify-center md:justify-start space-x-6">
                <a
                  href="https://www.instagram.com/peraduangroup/"
                  class="social-icon"
                >
                  <img
                    src="icons8-instagram-50.png"
                    alt="Instagram"
                    class="h-8 w-8 lg:h-10 lg:w-10"
                  />
                </a>
                <a
                  href="https://www.youtube.com/@tempatperaduan7822"
                  class="social-icon"
                >
                  <img
                    src="icons8-youtube-50.png"
                    alt="YouTube"
                    class="h-8 w-8 lg:h-10 lg:w-10"
                  />
                </a>
                <a href="https://x.com/tempatperaduan" class="social-icon">
                  <img
                    src="icons8-x-50.png"
                    alt="X"
                    class="h-8 w-8 lg:h-10 lg:w-10"
                  />
                </a>
              </div>
            </div>
          </div>
        </div>

        <!-- Bottom Copyright -->
        <div
          class="text-center text-gray-400 text-sm lg:text-base border-t border-gray-700 pt-8"
        >
          <p class="gradient-text font-medium">
            © <span id="current-year"></span> Tempat Peraduan Group. All rights
            reserved.
          </p>
        </div>
      </div>
    </footer>

    <script>
      // Set current year
      document.getElementById("current-year")!.textContent = new Date()
        .getFullYear()
        .toString();

      // Mobile menu toggle
      const toggleBtn = document.getElementById("hamburger-btn");
      const mobileMenu = document.getElementById("mobile-menu");

      if (toggleBtn && mobileMenu) {
        toggleBtn.addEventListener("click", () => {
          mobileMenu.classList.toggle("hidden");

          const isHidden = mobileMenu.classList.contains("hidden");
          const svg = toggleBtn.querySelector("svg");

          if (svg) {
            if (isHidden) {
              svg.innerHTML = `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>`;
              svg.style.transform = "rotate(0deg)";
            } else {
              svg.innerHTML = `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>`;
              svg.style.transform = "rotate(180deg)";
            }
          }
        });
      }

      // Smooth scrolling for anchor links
      document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
        anchor.addEventListener("click", function (this: HTMLAnchorElement, e) {
          e.preventDefault();
          const targetSelector = this.getAttribute("href");
          const target = document.querySelector(targetSelector!);
          if (target) {
            target.scrollIntoView({
              behavior: "smooth",
              block: "start",
            });
          }
        });
      });

      // Parallax effect
      window.addEventListener("scroll", () => {
        const scrolled = window.pageYOffset;
        const parallax = document.querySelector(".parallax") as HTMLElement;
        if (parallax) {
          const speed = scrolled * 0.5;
          parallax.style.transform = `translateY(${speed}px) scale(1.05)`;
        }
      });

      // Intersection Observer for section reveals
      const observerOptions = {
        threshold: 0.1,
        rootMargin: "0px 0px -50px 0px",
      };

      const observer = new IntersectionObserver((entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add("revealed");
          }
        });
      }, observerOptions);

      // Observe all sections with reveal animation
      document.querySelectorAll(".section-reveal").forEach((section) => {
        observer.observe(section);
      });

      // Add loading animation completion
      window.addEventListener("load", () => {
        setTimeout(() => {
          const loadingBar = document.querySelector(
            ".loading-bar"
          ) as HTMLElement;
          if (loadingBar) {
            loadingBar.style.opacity = "0";
            setTimeout(() => {
              loadingBar.remove();
            }, 500);
          }
        }, 2000);
      });

      // Enhanced navbar scroll effect
      let lastScrollTop = 0;
      const navbar = document.querySelector("nav");

      if (navbar instanceof HTMLElement) {
        window.addEventListener("scroll", () => {
          const scrollTop =
            window.pageYOffset || document.documentElement.scrollTop;

          if (scrollTop > lastScrollTop && scrollTop > 100) {
            // Scrolling down
            navbar.style.transform = "translateY(-100%)";
          } else {
            // Scrolling up
            navbar.style.transform = "translateY(0)";
          }

          // Add background opacity based on scroll
          const opacity = Math.min(scrollTop / 100, 0.95);
          navbar.style.backgroundColor = `rgba(0, 0, 0, ${opacity})`;

          lastScrollTop = scrollTop;
        });
      }

      // Add hover effects to cards
      document.querySelectorAll(".card-hover").forEach((card) => {
        card.addEventListener("mouseenter", function (this:HTMLElement) {
          this.style.transform = "translateY(-10px) scale(1.02)";
        });

        card.addEventListener("mouseleave", function (this:HTMLElement) {
          this.style.transform = "translateY(0) scale(1)";
        });
      });
    </script>
  </body>
</html>
